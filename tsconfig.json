{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/telegram-webapps-types-new"
    ]
  },
  "include": [
    "src"
  ]
}
